    <select id="findQnaa" resultType="Qnaanswer">
select qa.*,a.name
from qnaanswer qa
left join admin a
on qa.admin_id = a.id;
    </select>

    <insert id="insert">
    INSERT Qnaanswer (title, body , time,  admin_id)
	VALUES ( #{title}, #{body}, now(),#{admin_id})
    </insert>

    <update id="update">
        update qnaanswer set
        body = #{body},
        file = #{file},
        count = #{count},
        id =#{id}
        where id=#{id}
    </update>

    <select id="count" resultType="int">
        select count(*)
        from qna

